<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasjidAgungAnnur">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="-36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gbrmasjidagungannur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/masjidagungannur"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtmasjidagungannur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama   : Masjid Agung An-Nur"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gbrmasjidagungannur"
                app:layout_constraintTop_toBottomOf="@+id/gbrmasjidagungannur" />

            <TextView
                android:id="@+id/txtjenismasjidagungannur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis    : Masjid Besar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtmasjidagungannur"
                app:layout_constraintTop_toBottomOf="@+id/txtmasjidagungannur" />

            <TextView
                android:id="@+id/txtalamatmasjidagungannur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat : Jl. Hangtuah Ujung, Sumahilang, Kec. Pekanbaru Kota, Kota Pekanbaru, Riau"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtjenismasjidagungannur"
                app:layout_constraintTop_toBottomOf="@+id/txtjenismasjidagungannur" />

            <Button
                android:id="@+id/btnwebmasjidagungannur"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Cari di Google"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@+id/txtalamatmasjidagungannur"
                app:layout_constraintTop_toBottomOf="@+id/txtalamatmasjidagungannur"/>

            <Button
                android:id="@+id/btnpetamasjidagungannur"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Lihat Peta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@+id/btnwebmasjidagungannur"
                app:layout_constraintTop_toBottomOf="@+id/btnwebmasjidagungannur"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>